@model tamb.Models.Instrument

@{
    ViewData["Title"] = "Delete Instrument";
}

<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6 text-red-700">Delete Instrument</h1>

    <h3 class="text-xl font-semibold mb-4">Are you sure you want to delete this instrument?</h3>

    <div class="bg-white shadow-md rounded-md p-6 mb-6">
        @* Display instrument details for confirmation *@
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4 text-sm">
            <dt class="font-medium text-gray-500">Name:</dt>
            <dd class="text-gray-900">@Html.DisplayFor(model => model.Name)</dd>

             <dt class="font-medium text-gray-500">Type:</dt>
            <dd class="text-gray-900">@Html.DisplayFor(model => model.Type)</dd>

            <dt class="font-medium text-gray-500">Manufacturer:</dt>
            <dd class="text-gray-900">@Html.DisplayFor(model => model.Manufacturer)</dd>

            <dt class="font-medium text-gray-500">Model:</dt>
            <dd class="text-gray-900">@Html.DisplayFor(model => model.Model)</dd>

             <dt class="font-medium text-gray-500">Year:</dt>
            <dd class="text-gray-900">@Html.DisplayFor(model => model.Year)</dd>

            <dt class="font-medium text-gray-500">Condition:</dt>
            <dd class="text-gray-900">@Html.DisplayFor(model => model.Condition)</dd>

             <dt class="font-medium text-gray-500">Notes:</dt>
            <dd class="text-gray-900">@Html.DisplayFor(model => model.Notes)</dd>
        </dl>
    </div>

    @* Form to confirm deletion *@
    <form asp-action="Delete">
        @* Hidden input for the Instrument Id *@
        <input type="hidden" asp-for="Id" />
        @* Delete button *@
        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
            Delete
        </button>
         @* Link back to the Inventory List *@
        <a asp-action="Index" class="ml-4 text-gray-700 hover:text-gray-900">Cancel</a>
    </form>
</div>
