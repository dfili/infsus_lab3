@model Tamb.Models.Instrument

@{
    ViewData["Title"] = "Instrument Details";
}

<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6">Instrument Details</h1>

    @* Display Reservation Status Message (Optional) *@
    @if (ViewData["ReservationStatus"] != null)
    {
        var status = ViewData["ReservationStatus"].ToString();
        <div class="@(status == "Success" ? "bg-green-100 border-green-400 text-green-700" : "bg-red-100 border-red-400 text-red-700") border px-4 py-3 rounded relative mb-4" role="alert">
            <strong class="font-bold">@(status == "Success" ? "Success!" : "Error!")</strong>
            <span class="block sm:inline">@(status == "Success" ? "Instrument reserved successfully." : "Failed to reserve instrument.")</span>
        </div>
    }


    <div class="bg-white shadow-md rounded-md overflow-hidden p-6">
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-8">
            <dt class="text-sm font-medium text-gray-500">
                Name
            </dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="text-sm font-medium text-gray-500">
                Type
            </dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1">
                @Html.DisplayFor(model => model.Type)
            </dd>

            <dt class="text-sm font-medium text-gray-500">
                Manufacturer
            </dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1">
                @Html.DisplayFor(model => model.Manufacturer)
            </dd>

             <dt class="text-sm font-medium text-gray-500">
                Model
            </dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1">
                @Html.DisplayFor(model => model.Model)
            </dd>

            <dt class="text-sm font-medium text-gray-500">
                Year
            </dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1">
                 @Html.DisplayFor(model => model.Year) @* Handles nullable int *@
            </dd>

            <dt class="text-sm font-medium text-gray-500">
                Condition
            </dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1">
                @Html.DisplayFor(model => model.Condition)
            </dd>

            <dt class="text-sm font-medium text-gray-500">
                Status
            </dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1">
                @Html.DisplayFor(model => model.Status)
            </dd>

             <dt class="text-sm font-medium text-gray-500">
                Notes
            </dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-1">
                @Html.DisplayFor(model => model.Notes)
            </dd>
        </dl>

        @* Reservation Option *@
        @if (Model.Status == "Available")
        {
            <div class="mt-8">
                <h2 class="text-xl font-semibold mb-4">Reservation</h2>
                @* Simple form to trigger the Reserve action *@
                <form asp-controller="Inventory" asp-action="Reserve" method="post">
                    @* Pass the Instrument ID as a hidden input *@
                    <input type="hidden" name="instrumentId" value="@Model.Id" />
                    <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                        Reserve This Instrument
                    </button>
                </form>
            </div>
        }
        else
        {
             <div class="mt-8 text-center text-gray-600">
                 This instrument is currently @Model.Status.
             </div>
        }

        <div class="mt-8">
            @* Link back to the Inventory List *@
            <a asp-action="Index" class="text-indigo-600 hover:text-indigo-900">Back to Inventory List</a>
        </div>
    </div>
</div>
