
@{
    ViewData["Title"] = "Home page";
}

<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6">Home</h1>

    @* Navigation Buttons *@
    <div class="flex flex-wrap gap-4 mb-6">
        @* Button for Instrument Inventory (links to the current page) *@
        <a asp-controller="InstrumentInventory" asp-action="Index" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Instrument Inventory
        </a>

        @* Button for Digital Sheet Music Inventory (Placeholder) *@
        @* You will need to create a SheetMusicController and an Index view for this link to work *@
        <a asp-controller="SheetMusicInventory" asp-action="Index" class="inline-flex items-center px-6 py-3 border border-gray-300 shadow-sm text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Digital Sheet Music
        </a>

        @* Button for All the People (Placeholder) *@
        @* You will need to create a PeopleController and an Index view for this link to work *@
        <a asp-controller="People" asp-action="Index" class="inline-flex items-center px-6 py-3 border border-gray-300 shadow-sm text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            People
        </a>

        @* Button for Calendar (Placeholder) *@
        @* You will need to create a CalendarController and an Index view for this link to work *@
        <a asp-controller="Calendar" asp-action="Index" class="inline-flex items-center px-6 py-3 border border-gray-300 shadow-sm text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Calendar
        </a>
    </div>
</div>
